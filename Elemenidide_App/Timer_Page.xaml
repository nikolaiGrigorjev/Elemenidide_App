<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elemenidide_App.Timer_Page">
    <ContentPage.Content>
        <StackLayout>
            <FlexLayout>
                <Label x:Name="lbl"
                       Text="Valjuta nupule"
                       FontSize="Medium"
                       BackgroundColor="Bisque">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                    
                </Label>
                <Button x:Name="timer_btn" Text="Naita info" FontSize="Large" Clicked="timer_btn_Clicked"></Button>
            </FlexLayout>
            <Button x:Name="tagasi" Text="tagasi" FontSize="Large" Clicked="tagasiClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>